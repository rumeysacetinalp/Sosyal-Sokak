@{
    var isLoginPage = Context.Request.Path.Value?.ToLower().Contains("/userdashboard/userdashboard") ?? false;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Akıllı Etkinlik Planlama Platformu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        /* Arka plan ve diğer stiller */
        body {
            
            background-image: url('/resimler/adsız1.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            font-family: Arial, sans-serif;
            color: #000;
           
        }

        .navbar-section {
            background-image: url('/resimler/images.jpg');
            background-size: cover;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            border-bottom-left-radius: 20px; /* Alt kenarları yumuşatma */
            border-bottom-right-radius: 20px; /* Alt kenarları yumuşatma */
            overflow: hidden;
        }

        .navbar-brand {
            font-weight: bold;
        }

        .nav-item i {
            margin-right: 5px;
        }

        .content {
            margin-top: 20px;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 10px;
        }

        .badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }
    </style>
</head>
<body>
    <!-- Navbar Bölümü -->
    <div class="navbar-section">
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm">
            <div class="container">
                <a class="navbar-brand" href="#">Sosyal Sokak</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/UserDashboard/Userdashboard"><i class="bi bi-house-door"></i>Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/UserDashboard/Profil"><i class="bi bi-person"></i>Profilim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/UserDashboard/Etkinlik"><i class="bi bi-calendar-event"></i>Etkinlik Yönetimi</a>
                        </li>
                        <li class="nav-item position-relative">
                            <a class="nav-link" href="/UserDashboard/Mesaj">
                                <i class="bi bi-chat"></i>Mesajlaşma
                                @if (ViewBag.OkunmamisMesajVarMi == true)
                                {
                                    <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle">
                                        1
                                    </span>
                                }
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="/UserDashboard/SosyalSokakEn">
                                <i class="bi bi-trophy"></i> Sosyal Sokak'ın Enleri
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Login"><i class="bi bi-box-arrow-right"></i>Çıkış Yap</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    @RenderBody()
</body>
</html>
