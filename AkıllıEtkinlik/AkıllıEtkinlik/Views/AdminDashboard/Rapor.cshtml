        color: #000 !important; /* Siyah yazı */
    }

    .bg-info {
        background-color: #FFDBFB !important;
        color: #000 !important; /* Siyah yazı */
    }

    .bg-warning {
        background-color: #FFD8E1 !important;
        color: #000 !important; /* Siyah yazı */
    }

    .card-header {
        font-weight: bold; 
    }
</style>



